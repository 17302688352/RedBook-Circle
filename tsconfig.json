{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"src/typings/*.d.ts",
		"src/typings/**/*.d.ts",
		"src/**/*",
		"src/**/*.vue",
	],
	"exclude": [
		"/dist/**",
		 "node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"types": ["node"]
	}
}
